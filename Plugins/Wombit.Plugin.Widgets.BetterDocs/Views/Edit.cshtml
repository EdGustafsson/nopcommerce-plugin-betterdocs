@model DocumentModel
@{
    
    ViewBag.PageTitle = T("Admin.Catalog.Categories.EditCategoryDetails").Text;
    Html.SetActiveMenuItemSystemName("Documents");
}

<form asp-controller="BetterDocs" asp-action="Edit" method="post" id="document-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Wombit.Document.EditCategoryDetails") - @Model.Title
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Wombit.Document.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="button" onclick="javascript:OpenWindow('@Url.RouteUrl("BetterDocs", new {Title = Model.Title})', 800, 600, true); return false;" class="btn btn-info">
                <i class="far fa-eye"></i>
                @T("Admin.Common.Preview")
            </button>
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="category-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Widgets.BetterDocs/Views/_CreateOrUpdate.cshtml", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="category-delete" />