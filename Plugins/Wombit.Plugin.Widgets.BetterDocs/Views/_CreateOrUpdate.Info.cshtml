<script>

    $(document).ready(function () {

          let title = ''
          let shouldContinue = null




          //const inputElement = document.querySelector

          //console.log(inputElement)

          //if(inputElement) inputElement.addEventListener('keyup', (e) => {
          //    console.log(e)
          //    title = e.target.value
          //})

        $("#@clientId").fineUploader({
            request: {
              endpoint: '@(Url.Action("AsyncUpload", "BetterDocs", new { area = AreaNames.Admin }))',
              params: {
                  title: function ()
                  {
                  const el = document.querySelector('#Title')
                  if (el) return el.value;
                  },
                  shouldContinue: function ()
                  {
                      return shouldContinue
                  }
                  }
            },
            template: "qq-template-manual-trigger",
            multiple: false,
            autoUpload: false,

        }).on("complete", function (event, id, name, responseJSON, xhr) {
            $("#@(clientId + "downloadurl")").html("<a class='btn btn-default ml-1' href='" + responseJSON.downloadUrl + "'><i class='fas fa-download'></i>@T("Admin.Download.DownloadUploadedFile")</a>");
            $("#Id").val(responseJSON.documentId);
            $("#@(clientId + "remove")").show();



              //var documentId = responseJSON.documentId;
              //if (str.substr("successfully")) {

              if(responseJSON.Url == "Configure")
              {
                    window.location.href=responseJSON.Url;
              }
              else
              {
                   window.location.href='@Url.Action("Edit","BetterDocs",new { id = "ID"})'.replace("ID",responseJSON.documentId);
              }

              //}

        });

            $("#@clientId").fineUploader('setItemLimit', 1)


        $("#@(clientId + "remove")").click(function (e) {
            $("#@(clientId + "downloadurl")").html("");
            $("#@(clientId + "value") input").val(0);
            $("#@(clientId) .qq-upload-list-selector").empty();
            $(this).hide();
        });

         $('#trigger-upload').click(function(e) {


              if (form.valid()) {


              e.preventDefault();

              let pendingUpload = $("#@clientId").fineUploader('getRemainingAllowedItems');


                const el = document.querySelector('#Title')

                  if (el) {title=el.value;}

                   let form = $('#document-form');

                  shouldContinue = false;

                  if(pendingUpload == 1 && @Model.Id > 0){

                        window.location.href='@Url.Action("UpdateAsync","BetterDocs",new { id = "ID", title = "TITLE"})' 
                        .replace("ID", @Model.Id)
                        .replace("TITLE", el.value);

                  }
                  else{


                  $("#@clientId").fineUploader('uploadStoredFiles');

                  }



              }
         });


         $('#trigger-upload-continue').click(function() {
             
            
              if (form.valid()) {


              e.preventDefault();

              let pendingUpload = $("#@clientId").fineUploader('getRemainingAllowedItems');


                const el = document.querySelector('#Title')

                  if (el) {title=el.value;}

                   let form = $('#document-form');

                 shouldContinue = true;


                  if(pendingUpload == 1 && @Model.Id > 0){

                        window.location.href='@Url.Action("UpdateAsync","BetterDocs",new { id = "ID", title = "TITLE"})' 
                        .replace("ID", @Model.Id)
                        .replace("TITLE", el.value);

                  }
                  else{


                  $("#@clientId").fineUploader('uploadStoredFiles');

                  }



              }
         });

     });

</script>