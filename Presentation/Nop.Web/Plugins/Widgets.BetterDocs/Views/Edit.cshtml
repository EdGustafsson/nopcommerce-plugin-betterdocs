@model DocumentModel
@{
    
    ViewBag.PageTitle = T("Plugins.Widgets.BetterDocs.Admin.Fields.Documents.Edit").Text;
    Html.SetActiveMenuItemSystemName("Documents");
}

<form asp-controller="BetterDocs" id="qq-form" method="post" asp-action="Edit">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Plugins.Widgets.BetterDocs.Admin.Fields.Documents.Edit") - @Model.Title
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="Configure">@T("Plugins.Widgets.BetterDocs.Admin.Fields.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">

           <button name="edit" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>

            <button name="edit-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>


            <span id="category-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>

        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Widgets.BetterDocs/Views/_CreateOrUpdate.cshtml", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="category-delete" />