@model DocumentModel
@{
    ViewBag.PageTitle = T("Plugins.Widgets.BetterDocs.Admin.Fields.Documents.AddNew").Text;
    Html.SetActiveMenuItemSystemName("Documents");
}

<form asp-controller="BetterDocs" id="document-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Plugins.Widgets.BetterDocs.Admin.Fields.Documents.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="Configure">@T("Plugins.Widgets.BetterDocs.Admin.Fields.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">

            <button name="save" class="btn btn-primary" id="trigger-upload" >
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>

            <button name="save-continue" class="btn btn-primary" id="trigger-upload-continue">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>

        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Widgets.BetterDocs/Areas/Admin/Views/Shared/Components/_CreateOrUpdate.cshtml", Model)
</form>